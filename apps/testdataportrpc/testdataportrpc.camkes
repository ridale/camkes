import <std_connector.camkes>;

procedure Echo {
    string echo(in string s);
}

component Client {
    control;

    dataport Buf a;
    uses Echo b;

    dataport Buf(8192) e;
    uses Echo f;

    include "ctypes.h";
    dataport CStruct g;
    uses Echo h;

    dataport CStructBig i;
    uses Echo j;
}

component Server {
    dataport Buf a;
    provides Echo b;

    dataport Buf(8192) e;
    provides Echo f;

    include "ctypes.h";
    dataport CStruct g;
    provides Echo h;

    dataport CStructBig i;
    provides Echo j;
}

assembly {
    composition {
        component Client c;
        component Server s;

        connection seL4RPCCall c1(from c.b, to s.b);
        connection seL4RPCCall c3(from c.f, to s.f);
        connection seL4RPCCall c4(from c.h, to s.h);
        connection seL4RPCCall c5(from c.j, to s.j);

        connection seL4SharedData d1(from c.a, to s.a);
        connection seL4SharedData d3(from c.e, to s.e);
        connection seL4SharedData d4(from c.g, to s.g);
        connection seL4SharedData d5(from c.i, to s.i);
    }
    configuration {
        c1.buffer = "d1";
        c3.buffer = "d3";
        c4.buffer = "d4";
        c5.buffer = "d5";
        d5.size = 8192;
    }
}
